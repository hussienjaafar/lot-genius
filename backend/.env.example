# Scrapers OFF by default; set true only after ToS/robots review
ENABLE_EBAY_SCRAPER=false
ENABLE_FB_SCRAPER=false
SCRAPER_TOS_ACK=false

# External comps tuning
EXTERNAL_COMPS_PRIOR_WEIGHT=0.25
EXTERNAL_COMPS_LOOKBACK_DAYS=180
EXTERNAL_COMPS_MAX_RESULTS=40

# Tail-risk for VaR/CVaR
VAR_ALPHA=0.20

# Keepa API configuration
KEEPA_API_KEY=your_keepa_api_key_here

# eBay compliance verification token (provide this in eBay dev portal)
# Generate a strong random string and keep it secret
# Example: lotgenius-verification-2025 (replace in production)
EBAY_VERIFICATION_TOKEN=change_me_verification_token

# Decision policy
MIN_ROI_TARGET=1.25
SELLTHROUGH_HORIZON_DAYS=60
RISK_THRESHOLD=0.80
